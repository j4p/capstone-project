library(ggplot2)

# Grammar of Graphics (Intro)
# 1. Data
head(diamonds)
# 2. Aesthetics
ggplot(data = diamonds, mapping = aes(x = carat, y = price, color = color))
# 3. Geometries
ggplot(data = diamonds, mapping = aes(x = carat, y = price, color = color)) + 
  geom_point() +
  ggtitle("A point geom with position and color aesthetics")
# 4. Themes
ggplot(data = diamonds, mapping = aes(x = carat, y = price, color = color)) + 
  geom_point() +
  ggtitle("A point geom with position and color aesthetics") +
  theme(plot.caption = element_text(size = 8))
# 5. Statistics
ggplot(data = diamonds, mapping = aes(x = carat, y = price, color = color)) + 
  geom_point() +
  ggtitle("A point geom with position and color aesthetics") +
  theme(plot.caption = element_text(size = 8)) +
  geom_line(
    mapping = aes(x = carat, y = price),
    data = diamonds,
    stat = "smooth",
    method = "lm"
  )
# 6. Coordinates
ggplot(data = diamonds, mapping = aes(x = carat, y = price, color = color)) + 
  geom_point() +
  ggtitle("A point geom with position and color aesthetics") +
  theme(plot.caption = element_text(size = 8)) +
  geom_line(
    mapping = aes(x = carat, y = price),
    data = diamonds,
    stat = "smooth",
    method = "lm"
  ) +
  coord_polar()
# 7. Facets
ggplot(data = diamonds, mapping = aes(x = carat, y = price, color = color)) + 
  geom_point() +
  ggtitle("A point geom with position and color aesthetics") +
  theme(plot.caption = element_text(size = 8)) +
  geom_line(
    mapping = aes(x = carat, y = price),
    data = diamonds,
    stat = "smooth",
    method = "lm"
  ) +
  coord_polar() +
  facet_wrap(facets = vars(clarity))




